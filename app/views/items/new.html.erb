<div class="new-item-container">
  <div class="form-container">
    <h1>Adicionar Item</h1>

    <%= form_with(model: @item, url: items_path, method: :post, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name, "Nome" %>
        <%= form.text_field :name, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :category, "Categoria" %>
        <%= form.select :category, ["Outfits", "Weapons"], required: true %>
      </div>

      <div class="form-group">
        <%= form.label :rarity, "Raridade" %>
        <%= form.select :rarity, ["Common", "Rare", "Legendary"], required: true %>
      </div>

      <div class="form-actions">
        <%= form.submit "Criar Item", class: "btn btn-light" %>
      </div>
    <% end %>

    <%= link_to "Voltar para a lista", items_path, class: "link-back" %>
  </div>
</div>
