<div class="form-container">
  <h1>Adicionar Novo Item</h1>

  <%= form_with(model: @item, url: items_path, method: :post, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, "Nome" %>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :category, "Categoria" %>
      <%= form.text_field :category, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :rarity, "Raridade" %>
      <%= form.text_field :rarity, required: true %>
    </div>

    <div class="form-actions">
      <%= form.submit "Criar Item", class: "btn-submit" %>
    </div>
  <% end %>

  <%= link_to "Voltar para a lista", items_path, class: "link-back" %>
</div>
